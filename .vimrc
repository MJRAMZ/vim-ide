"------ Vundle Plugin settings -----
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()
Plugin 'VundleVim/Vundle.vim'
call vundle#end()

"---------- General settings ----------
set backspace=indent,eol,start
set mouse=a
set ruler
set number
set showcmd
set incsearch
set hlsearch
set autoindent
set expandtab
set tabstop=2
set shiftwidth=2
set cursorline
set showmatch
filetype plugin indent on
syntax enable
